<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <include
        android:id="@+id/userinfo_title_bar"
        layout="@layout/title_bar" />

    <ImageView
        android:id="@+id/userinfo_title_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userinfo_title_bar"
        android:background="@drawable/second_level_title_line" />

    <TextView
        android:id="@+id/tv_can_user_money"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textSize="@dimen/content_title_size" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35.0dp"
        android:layout_marginTop="@dimen/simple_padding"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_e"
            android:layout_marginBottom="8.0dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/userinfo_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/simple_margin"
                android:text="@string/acount_input_name"
                android:textColor="@color/deep_black"
                android:textSize="@dimen/content_title_size" />

            <EditText
                android:id="@+id/userinfo_truename_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dp"
                android:background="#ffffff"
                android:hint="@string/acount_input_notice"
                android:inputType="numberDecimal"
                android:textSize="@dimen/content_title_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_e"
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_gray" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/pay_typeradioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/pay_type0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/pay_mode_1"
            android:textColor="#ff000000" >
        </RadioButton>

        <RadioButton
            android:id="@+id/pay_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120.0dp"
            android:layout_marginTop="-50.0dp"
            android:text="@string/pay_mode_3"
            android:textColor="#ff000000" >
        </RadioButton>
    </RadioGroup>

    <Button
        android:id="@+id/userinfo_save_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10.0dp"
        android:layout_marginRight="10.0dp"
        android:layout_marginTop="@dimen/simple_margin"
        android:background="@drawable/btn_red_selector"
        android:text="@string/acount_input_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/save_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/simple_margin"
        android:layout_marginTop="20.0dp"
        android:text="@string/acount_moeny_remark"
        android:textSize="@dimen/content_title_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/simple_margin"
        android:layout_marginTop="5.0dp"
        android:text="@string/acount_moeny_remark1"
        android:textSize="@dimen/content_title_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/simple_margin"
        android:layout_marginTop="5.0dp"
        android:text="@string/acount_moeny_remark2"
        android:textSize="@dimen/content_title_size" />

</LinearLayout>