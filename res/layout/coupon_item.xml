<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     
    android:background="#ffffff">
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
    	android:layout_marginRight="10.0dp">
        <TextView 
            android:id="@+id/tv_nkey"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="券号："
            android:textColor="#000000"/>
        <TextView 
            android:id="@+id/tv_key"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="加载中。。。"
            android:textColor="#730203"
            android:layout_toRightOf="@+id/tv_nkey"/>
        <TextView 
            android:id="@+id/tv_state"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
    	android:layout_marginRight="10.0dp">
        <TextView 
            android:id="@+id/tv_nkey_1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="类型："
            android:textColor="#000000"/>
        <TextView 
            android:id="@+id/tv_type"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="加载中。。。"
            android:textColor="#945c0f"
            android:layout_toRightOf="@+id/tv_nkey_1"/>
        
        <LinearLayout 
            android:id="@+id/ll_has"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView 
                android:id="@+id/tv_has"
	            android:layout_alignParentRight="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="余额："
	            android:textColor="#000000"/>
            <TextView 
                android:id="@+id/tv_has_value"
	            android:layout_alignParentRight="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="加载中"
	            android:textColor="@color/red"/>
        </LinearLayout>
        
    </RelativeLayout>

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
    	android:layout_marginRight="10.0dp">
        <TextView 
            android:id="@+id/tv_nvalue"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="面额："
            android:textColor="#000000"/>
        <TextView 
            android:id="@+id/tv_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="加载中。。。"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/tv_nvalue"/>
        <TextView 
            android:id="@+id/tv_gever"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textSize="12.0dp"
            android:textColor="#f2002d"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/rl_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
    	android:layout_marginRight="10.0dp">
        <TextView 
            android:id="@+id/tv_ntime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="使用时间："
            android:textColor="#000000"/>
        <TextView 
            android:id="@+id/tv_time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="加载中。。。"
            android:textColor="#f2002d"
            android:layout_toRightOf="@+id/tv_ntime"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/rl_min"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
    	android:layout_marginRight="10.0dp">
        <TextView 
            android:id="@+id/tv_nmin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="最低消费："
            android:textColor="#000000"/>
        <TextView 
            android:id="@+id/tv_min"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="加载中。。。"
            android:textColor="#f2002d"
            android:layout_toRightOf="@+id/tv_nmin"/>
    </RelativeLayout>
</LinearLayout>
