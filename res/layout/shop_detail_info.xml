<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:HJAndroid="http://schemas.android.com/apk/res/com.ihangjing.ZJYXForAndroid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <com.ihangjing.HJControls.HJScorllADV
        android:id="@+id/iv_adv"
        android:layout_width="fill_parent"
        android:layout_height="150.0dp"
        HJAndroid:backgoundSrc="@drawable/nopic_shop"
        HJAndroid:isShowButton="true"
        HJAndroid:isShowDots="false"
        HJAndroid:readData="1"
        HJAndroid:scorllTime="5"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shop_news"
            android:gravity="center|left"
            android:text="商家公告"
            android:textColor="#f9303d"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_news"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#f9303d"
            android:visibility="gone" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:layout_marginLeft="3.0dp"
            android:layout_marginRight="3.0dp"
            android:background="@drawable/v_black"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="3.0dip"
            android:paddingRight="15.0dip" >

            <RelativeLayout
                android:id="@+id/itemImage"
                android:layout_width="90.0dip"
                android:layout_height="67.0dip"
                android:layout_gravity="center"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/nopic_shop"
                android:scaleType="centerCrop" >
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_notic"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_shopname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/shop_detail_info"
                        android:textColor="#000000"
                        android:textSize="14.0dp" />

                    <ImageView
                        android:id="@+id/iv_w"
                        android:layout_width="20.0dp"
                        android:layout_height="20.0dp"
                        android:background="@drawable/icon_w"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_d"
                        android:layout_width="20.0dp"
                        android:layout_height="20.0dp"
                        android:background="@drawable/icon_d"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/shopdetail_senttime"
                    style="@style/text_content_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_time_big"
                    android:text="" />

                <TextView
                    android:id="@+id/shopdetail_send_money"
                    style="@style/text_content_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_money"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_good"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#20ac97" />

                    <TextView
                        android:id="@+id/tv_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dp"
                        android:drawableLeft="@drawable/ic_general"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#f3771e" />

                    <TextView
                        android:id="@+id/tv_bad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dp"
                        android:drawableLeft="@drawable/ic_bad"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#fc2939" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 是否是认证商家 -->

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/shopdetail_icon"
                android:layout_width="56.0dip"
                android:layout_height="19.0dip"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_discount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0dp"
                android:layout_marginLeft="3.0dp"
                android:layout_marginRight="3.0dp"
                android:background="@drawable/v_black" />

            <LinearLayout
                android:id="@+id/ll_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dp"
                android:orientation="vertical" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:layout_marginLeft="3.0dp"
            android:layout_marginRight="3.0dp"
            android:background="@drawable/v_black" />

            

            

            <ImageView
                android:id="@+id/shopdetail_tel"
                style="@style/text_content_style"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:src="@drawable/tel_call"
                android:gravity="center_vertical"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip" />
            <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:layout_marginLeft="3.0dp"
            android:layout_marginRight="3.0dp"
            android:background="@drawable/v_black" />
		<LinearLayout
		    android:id="@+id/ll_show_on_map"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shopdetail_address"
                    style="@style/text_content_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_around"
                    android:gravity="center_vertical"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip" />

                <TextView
                    android:id="@+id/shopdetail_distance"
                    style="@style/text_content_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dp"
                    android:drawableLeft="@drawable/icon_distance"
                    android:text="" />
            </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:layout_marginLeft="3.0dp"
            android:layout_marginRight="3.0dp"
            android:background="@drawable/v_black" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/shopdetail_info_padding"
            android:visibility="gone" >

            <TextView
                style="@style/text_normal_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="准备时间：" />

            <TextView
                android:id="@+id/shopdetail_senttime1"
                style="@style/text_content_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/shopdetail_info_padding"
            android:visibility="gone" >

            <TextView
                style="@style/text_normal_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家特色：" />

            <TextView
                android:id="@+id/tv_tese"
                style="@style/text_highlight_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:layout_marginLeft="3.0dp"
            android:layout_marginRight="3.0dp"
            android:background="@drawable/v_black"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/shopdetail_linearLayout6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:background="@drawable/selector_bg_list"
            android:gravity="center_vertical"
            android:padding="@dimen/shopdetail_info_padding"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_detail_notice"
                android:textColor="#ff000000"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/shopdetail_sentorg"
                style="@style/text_content_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_sz"
            style="@style/text_normal_style"
            android:layout_width="fill_parent"
            android:layout_height="35.0dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/shop_news"
            android:drawableRight="@drawable/list_ico"
            android:gravity="center_vertical|left"
            android:text="@string/shop_detail_v_sz" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dp"
            android:layout_marginLeft="3.0dp"
            android:layout_marginRight="3.0dp"
            android:background="@drawable/v_black"/>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="2.0dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_offer_detail"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/shop_detail_y"
                    android:textColor="#f9303d"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dp"
                    android:layout_toLeftOf="@+id/btn_go_foodlist"
                    android:background="@drawable/green_round_rect_shape"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="#ffffff"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btn_go_foodlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/red_round_rect_shape"
                    android:text="@string/shop_detail_f"
                    android:textColor="#ffffff"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/shopdetail_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6.0dip"
                android:layout_marginTop="6.0dip"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip"
                android:text=""
                android:textColor="#ff000000"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_go_command"
        style="@style/text_normal_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/icon_comment"
        android:gravity="center_vertical|left"
        android:text="@string/shop_detail_v_command" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_marginLeft="3.0dp"
        android:layout_marginRight="3.0dp"
        android:background="@drawable/v_black" />

</LinearLayout>