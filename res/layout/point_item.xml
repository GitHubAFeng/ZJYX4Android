<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     
    android:background="#ffffff">
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
    	android:layout_marginRight="10.0dp">
        <TextView 
            android:id="@+id/tv_nkey"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/point_list_point"
            android:textColor="#000000"/>
        <TextView 
            android:id="@+id/tv_key"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/user_center_get"
            android:textColor="#730203"
            android:layout_toRightOf="@+id/tv_nkey"/>
        <TextView 
            android:id="@+id/tv_state"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textColor="#000000"
            android:visibility="gone"/>
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:id="@+id/rl_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
    	android:layout_marginRight="10.0dp">
        <TextView 
            android:id="@+id/tv_ntime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/point_list_remark"
            android:textColor="#000000"/>
        <TextView 
            android:id="@+id/tv_time"
            android:layout_height="60.0dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/user_center_get"
            android:textColor="#f2002d"
            android:layout_toRightOf="@+id/tv_ntime"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/rl_min"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
    	android:layout_marginRight="10.0dp">
        <TextView 
            android:id="@+id/tv_nmin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/point_list_time"
            android:textColor="#000000"/>
        <TextView 
            android:id="@+id/tv_min"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/user_center_get"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/tv_nmin"/>
    </RelativeLayout>
</LinearLayout>
