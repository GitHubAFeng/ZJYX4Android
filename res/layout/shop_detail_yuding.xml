<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:HJAndroid="http://schemas.android.com/apk/res/com.ihangjing.ZJYXForAndroid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_gray"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_gray"
            android:orientation="vertical" >

            <Gallery
                android:id="@+id/ll_g"
                android:layout_width="fill_parent"
                android:layout_height="150.0dp"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/rg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dp"
                    android:layout_marginTop="5.0dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5.0dp"
                        android:text="座位类型："
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/rb_dt"
                        android:layout_width="100.0dp"
                        android:layout_height="30.0dp"
                        android:layout_marginLeft="15.0dp"
                        android:background="@drawable/rb_yd_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="大厅"
                        android:textColor="#ffffff"
                        android:textSize="16.0dp" />

                    <RadioButton
                        android:id="@+id/rb_bx"
                        android:layout_width="100.0dp"
                        android:layout_height="30.0dp"
                        android:layout_marginLeft="15.0dp"
                        android:background="@drawable/rb_yd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="包厢"
                        android:textColor="#ffffff"
                        android:textSize="16.0dp" />
                </RadioGroup>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="#ededed" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dp"
                    android:layout_marginTop="10.0dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5.0dp"
                        android:text="预定日期："
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/et_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="left"
                        android:hint="请选择预定日期"
                        android:textColor="#888888"
                        android:textSize="14.0dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="#ededed" />

                <RadioGroup
                    android:id="@+id/rg_eat_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dp"
                    android:layout_marginTop="5.0dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5.0dp"
                        android:text="就餐时间："
                        android:textColor="#000000" />

                    <RadioButton
                        android:id="@+id/rb_t1"
                        android:layout_width="100.0dp"
                        android:layout_height="30.0dp"
                        android:layout_marginLeft="15.0dp"
                        android:background="@drawable/rb_yd_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="午餐"
                        android:textColor="#ffffff"
                        android:textSize="16.0dp" />

                    <RadioButton
                        android:id="@+id/rb_t2"
                        android:layout_width="100.0dp"
                        android:layout_height="30.0dp"
                        android:layout_marginLeft="15.0dp"
                        android:background="@drawable/rb_yd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="晚餐"
                        android:textColor="#ffffff"
                        android:textSize="16.0dp" />
                </RadioGroup>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="#ededed" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dp"
                    android:layout_marginTop="10.0dp"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5.0dp"
                        android:text="到店时间："
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/et_dtime"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="left"
                        android:hint="请选择到店时间"
                        android:textColor="#888888"
                        android:textSize="14.0dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dp"
                    android:layout_marginTop="10.0dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5.0dp"
                        android:text="姓名："
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="left"
                        android:hint="请输入您的姓名"
                        android:textColor="#888888"
                        android:textSize="14.0dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="#ededed" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dp"
                    android:layout_marginTop="10.0dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5.0dp"
                        android:text="手机号："
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="left"
                        android:hint="请输入您的手机号码"
                        android:phoneNumber="true"
                        android:textColor="#888888"
                        android:textSize="14.0dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="#ededed" />
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dp"
                    android:layout_marginTop="10.0dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5.0dp"
                        android:text="就餐人数："
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/et_number"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="left"
                        android:hint="请输入就餐人数"
                        android:inputType="number"
                        android:textColor="#888888"
                        android:textSize="14.0dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="#ededed" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dp"
                    android:layout_marginTop="10.0dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5.0dp"
                        android:text="备注："
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/et_remark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="left"
                        android:hint="请输入您的备注（可不填）"
                        android:textColor="#888888"
                        android:textSize="14.0dp" />
                </LinearLayout>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_y_type"
                android:layout_width="fill_parent"
                android:layout_height="65.0dp"
                android:layout_marginTop="10.0dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/rb_no_food"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dp"
                    android:layout_marginBottom="10.0dp"
                    android:layout_marginLeft="105.0dp"
                    android:background="@drawable/rb_yd_food_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="只订座不提前点菜"
                    android:textColor="#adadad"
                    android:textSize="12.0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dp"
                    android:layout_marginTop="-35.0dp"
                    android:text="预定方式："
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:layout_marginTop="10.0dp"
                    android:background="#ededed" />

                <RadioButton
                    android:id="@+id/rb_food"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dp"
                    android:layout_marginLeft="105.0dp"
                    android:background="@drawable/rb_yd_food_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="提前点菜，去了吃"
                    android:textColor="#adadad"
                    android:textSize="12.0dp" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_pay_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dp"
                android:background="#ffffff"
                android:orientation="vertical"
                >

                <RadioButton
                    android:id="@+id/rb_pay0"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dp"
                    android:layout_marginBottom="10.0dp"
                    android:layout_marginLeft="105.0dp"
                    android:background="@drawable/rb_yd_food_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="到店付款"
                    android:textColor="#adadad"
                    android:textSize="12.0dp" 
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="100.0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dp"
                    android:layout_marginTop="-35.0dp"
                    android:text="支付方式："
                    
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:layout_marginTop="10.0dp"
                    android:background="#ededed" />

                <RadioButton
                    android:id="@+id/rb_pay1"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dp"
                    android:layout_marginLeft="105.0dp"
                    android:background="@drawable/rb_yd_food_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="支付宝"
                    android:checked="true"
                    android:textColor="#adadad"
                    android:textSize="12.0dp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="#ededed" />

                <RadioButton
                    android:id="@+id/rb_pay2"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dp"
                    android:layout_marginLeft="105.0dp"
                    android:background="@drawable/rb_yd_food_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="微信支付"
                    android:textColor="#adadad"
                    android:textSize="12.0dp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dp"
                    android:background="#ededed" />

                <RadioButton
                    android:id="@+id/rb_pay3"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dp"
                    android:layout_marginLeft="105.0dp"
                    android:background="@drawable/rb_yd_food_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="账户余额"
                    android:textColor="#adadad"
                    android:textSize="12.0dp" />

                <EditText
                    android:id="@+id/pay_password_et"
                    style="@style/login_register_edit_sytle"
                    android:hint="@string/pay_password"
                    android:password="true"
                    android:visibility="gone" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="100.0dp"
                android:layout_marginTop="10.0dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dp"
                    android:text="总额：￥0.00"
                    android:textColor="@color/topbar_bg_color"
                    android:textSize="12.0dp" />

                <Button
                    android:id="@+id/title_bar_right_btn"
                    android:layout_width="100.0dp"
                    android:layout_height="30.0dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/btn_red_selector"
                    android:text="预订结算"
                    android:textColor="#ffffff" >
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>