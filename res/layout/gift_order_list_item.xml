<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_map"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:background="@drawable/words_bg" >

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <!-- 订单编号  订单状态 -->

            <RelativeLayout
                android:id="@+id/linearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip" >

                <TextView
                    android:id="@+id/orderitem_orderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/gift_order_list_g_name"
                    android:textColor="@color/Black"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/orderitem_g_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/orderitem_orderid"
                    android:text="TextView"
                    android:textColor="#ff888888"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/orderitem_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="TextView"
                    android:textColor="#ff5500"
                    android:textSize="14.0sp" />
            </RelativeLayout>
            <!-- 商家名称 -->

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4.0dip"
                    android:text="@string/gift_order_list_u_point"
                    android:textColor="@color/Black"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/orderitem_point"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow_gray"
                    android:text="TextView"
                    android:textColor="#ff888888"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4.0dip"
                    android:text="@string/gift_order_list_c_time"
                    android:textColor="@color/Black"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/orderitem_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#ff888888"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>