<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10.0dp"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dp"
        android:layout_marginTop="10.0dp"
        android:src="@drawable/dot_03" />

    <TextView
        android:id="@+id/tv_top_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dp"
        android:layout_toRightOf="@+id/iv_dot"
        android:text="2013-05-21 11:31:00"
        android:textSize="16.0dp" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_top_count"
        android:layout_marginLeft="15.0dp"
        android:text="您推荐的商家："
        android:textColor="#000000"
        android:textSize="18.0dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_count"
        android:layout_marginLeft="15.0dp"
        android:text="20"
        android:textColor="#FF2525"
        android:textSize="18.0dp" />

</RelativeLayout>