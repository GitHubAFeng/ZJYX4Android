<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <include
        android:id="@+id/address_message_tile_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/title_bar" />

    <ListView
        android:id="@+id/address_manage_address_list_LL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_message_tile_bar"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none" />

    <ImageView
        android:id="@+id/address_manage_horline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_manage_address_list_LL"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/horizontal_line" />

    <TextView
        android:id="@+id/address_manage_add_newaddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/address_manage_horline"
        android:layout_centerVertical="true"
        android:background="@drawable/index_icon_deep_bg"
        android:drawableRight="@drawable/arrow_gray"
        android:paddingBottom="15.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="15.0dip"
        android:text="添加新地址"
        android:textColor="@color/black"
        android:textSize="@dimen/content_title_size" />

    <ImageView
        android:id="@+id/address_message_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_message_tile_bar"
        android:background="@drawable/second_level_title_line" />

</RelativeLayout>